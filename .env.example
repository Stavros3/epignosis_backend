# Database Configuration
DB_HOST=mysql
DB_DATABASE=my_database
DB_USERNAME=appuser
DB_PASSWORD=apppass

# JWT Configuration
# IMPORTANT: Change this to a strong, unique secret key in production!
# Generate a secure key: php -r "echo bin2hex(random_bytes(32));"
JWT_SECRET=your-super-secret-key-change-this-in-production-use-at-least-256-bits

# JWT Token Expiration (in seconds)
# 3600 = 1 hour, 86400 = 1 day, 604800 = 1 week
JWT_EXPIRATION=3600
